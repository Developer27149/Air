{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonJS",
    "target": "esnext",
    "sourceMap": true,
    "paths": {
      "Utils/*": ["src/utils/*"],
      "Components/*": ["src/components/*"],
      "Routes/*": ["src/routes/*"],
      "Prepare/*": ["src/prepare/*"],
      "Store/*": ["src/store/*"],
      "Schema/*": ["src/schema/*"],
      "Styles/*": ["src/styles/*"],
      "Hooks/*": ["src/hooks/*"]
    }
  },
  "typeAcquisition": {
    "include": ["chrome"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
